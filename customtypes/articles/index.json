{
  "id": "articles",
  "label": "Articles",
  "format": "page",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "config": {
          "label": "UID"
        },
        "type": "UID"
      },
      "title": {
        "type": "Text",
        "config": {
          "label": "Title",
          "placeholder": ""
        }
      },
      "subtitle": {
        "type": "Text",
        "config": {
          "label": "Subtitle",
          "placeholder": ""
        }
      },
      "type": {
        "type": "Select",
        "config": {
          "label": "Type",
          "placeholder": "",
          "options": [
            "Live report",
            "Press release",
            "Interview",
            "Discovery",
            "Gallery",
            "Other"
          ],
          "default_value": "Live report"
        }
      },
      "featured_image": {
        "type": "Image",
        "config": {
          "label": "Featured Image",
          "constraint": {},
          "thumbnails": []
        }
      },
      "idol_name": {
        "type": "Text",
        "config": {
          "label": "Group/Idol",
          "placeholder": ""
        }
      },
      "venue": {
        "type": "Text",
        "config": {
          "label": "Venue",
          "placeholder": ""
        }
      },
      "event_date": {
        "type": "Date",
        "config": {
          "label": "Event date",
          "placeholder": ""
        }
      },
      "publication_date": {
        "type": "Date",
        "config": {
          "label": "Publication date",
          "placeholder": ""
        }
      },
      "author": {
        "type": "Link",
        "config": {
          "label": "Author",
          "select": "document",
          "customtypes": ["author"]
        }
      },
      "gallery_link": {
        "type": "Link",
        "config": {
          "label": "Gallery Link",
          "select": "document",
          "customtypes": ["gallery"]
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "purchase": {
              "type": "SharedSlice"
            },
            "social_links": {
              "type": "SharedSlice"
            },
            "authors": {
              "type": "SharedSlice"
            },
            "single_button": {
              "type": "SharedSlice"
            },
            "video": {
              "type": "SharedSlice"
            },
            "quote": {
              "type": "SharedSlice"
            },
            "setlist": {
              "type": "SharedSlice"
            },
            "image": {
              "type": "SharedSlice"
            },
            "rich_text": {
              "type": "SharedSlice"
            },
            "carousel": {
              "type": "SharedSlice"
            }
          }
        }
      }
    },
    "SEO & Metadata": {
      "meta_title": {
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        },
        "type": "Text"
      },
      "meta_description": {
        "config": {
          "label": "Meta Description",
          "placeholder": "A brief summary of the page"
        },
        "type": "Text"
      },
      "meta_image": {
        "config": {
          "constraint": {
            "height": 1260,
            "width": 2400
          },
          "label": "Meta Image",
          "thumbnails": []
        },
        "type": "Image"
      },
      "slices1": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "links": {
              "type": "SharedSlice"
            }
          }
        }
      }
    }
  }
}
